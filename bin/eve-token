#!/bin/sh
if test "$1" == "test"; then
  host=oc-eve-test.herokuapp.com
else 
  host=api.thanks.com
fi

json=$(curl -s -d "grant_type=password" -d "username=adam.tanner@octanner.com" -d "password=iloveapples" "abc123:ssh-secret@$host/oauth/token")
token=$(expr "$json" : '.*"access_token":"\([^"]*\)"')
echo $token
