set imap_user = "mthorley"
set imap_pass = `grep imap.globalbased ~/.authinfo | awk '{print $2}'`

set smtp_url = "smtp://mthorley@zimbra.globalbased.com"
set smtp_pass = `grep smtp.globalbased ~/.authinfo | awk '{print $2}'`
set from = "mthorley@globalbased.com"
set realname = "Matthew Thorley"

set folder="imaps://zimbra.globalbased.com"
set spoolfile = "+INBOX"
set postponed = "+Drafts"
set record = "+Sent"

set header_cache = ~/.mutt/cache/headers
set message_cachedir = "~/.mutt/cache/bodies"

set sort = 'threads'
set sort_aux = 'last-date-received'
set fast_reply = yes
set copy = yes
set save_address = yes
set timeout = 10
set mail_check = 5


set alias_file="~/.muttrc-aliases"
source "~/.muttrc-aliases"

ignore *
unignore Date: From: To: CC: Bcc: Subject:
hdr_order Date From To Cc # Doesn't seem to do anything?
auto_view text/html

